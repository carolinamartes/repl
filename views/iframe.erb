<!DOCTYPE html>
<html>
    <head>
        <title>Repl</title>
        <script>
            console.oldLog = console.log;
            console.log = function (value) {
                window.$log = value.toString();
            };
            window.addEventListener('message', function (e) {
                if (e.origin !== (window.location.protocol + "//" + window.location.host))
                    return;
                var mainWindow = e.source;
                var result = '';
                try {
                    if (eval(e.data.code) != null && e.data.language=="javascript/node-0.10.29") {
                        result = "Output: " + (eval(e.data.code))
                    } else if (eval(e.data.code) == null && $log != null && e.data.language=="javascript/node-0.10.29") {
                        result = "Console: " + $log
                    }
                    // else if (eval(e.data.code) != null && e.data.language!="javascript/node-0.10.29") {
                    //
                    // }
                } catch (e) {

                    result = e.name + ': ' + e.message;
                }
                mainWindow.postMessage(result, e.origin);
            });
        </script>
    </head>
    <body></body>
</html>
